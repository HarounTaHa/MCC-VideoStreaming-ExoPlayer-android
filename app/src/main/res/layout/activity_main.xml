<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/video_2"
        android:layout_width="106dp"
        android:layout_height="61dp"
        android:layout_marginTop="44dp"
        android:text="Video 2"
        app:layout_constraintStart_toStartOf="@+id/video_1"
        app:layout_constraintTop_toBottomOf="@+id/video_1" />

    <Button
        android:id="@+id/video_4"
        android:layout_width="106dp"
        android:layout_height="61dp"
        android:layout_marginTop="54dp"
        android:text="Video 4"
        app:layout_constraintStart_toStartOf="@+id/video_3"
        app:layout_constraintTop_toBottomOf="@+id/video_3" />

    <Button
        android:id="@+id/video_1"
        android:layout_width="106dp"
        android:layout_height="61dp"
        android:layout_marginTop="162dp"
        android:text="Video 1 "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/video_3"
        android:layout_width="106dp"
        android:layout_height="61dp"
        android:layout_marginTop="62dp"
        android:text="Video 3"
        app:layout_constraintStart_toStartOf="@+id/video_2"
        app:layout_constraintTop_toBottomOf="@+id/video_2" />


</androidx.constraintlayout.widget.ConstraintLayout>